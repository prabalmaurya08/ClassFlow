<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/AssignmentCardFaculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"

        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                android:foreground="@drawable/classroom_bg2"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/FacultyAssigned_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CS-44"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="26sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/facultyAssignSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compiler Design"
                android:textStyle="bold"

                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="@color/beige"
                app:layout_constraintTop_toBottomOf="@+id/FacultyAssigned_class"
                />
            <TextView
                android:id="@+id/faculty_assign_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ms.Upasana Dugal"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="19sp"
                android:textColor="@color/beige"
                app:layout_constraintTop_toBottomOf="@+id/facultyAssignSubject" />





        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>