<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/AssignmentCardStu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/blue"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/StuAssignmentSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Automata Assignment"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="26sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/StuAssignedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assigned On- 1 December,2024"

                android:layout_margin="10dp"
                android:textSize="16sp"
                android:textColor="@color/beige"
                app:layout_constraintTop_toBottomOf="@+id/StuAssignmentSubject"
                />
            <TextView
                android:id="@+id/StuDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit By- 5 December,2024"

                android:layout_margin="10dp"
                android:textSize="16sp"
                android:textColor="@color/beige"
                app:layout_constraintTop_toBottomOf="@+id/StuAssignedDate" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/blue"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="@id/StuAssignedDate"
                app:layout_constraintTop_toBottomOf="@id/StuAssignmentSubject"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>