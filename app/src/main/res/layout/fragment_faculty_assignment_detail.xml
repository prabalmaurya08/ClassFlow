<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".faculty.facultyAssignment.FacultyAssignmentDetail">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FacultyAssignmentDetailNavbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/FacultyCFlogo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logoclassflow"

            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/FacultyAssignmentDetailHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment"
            android:textSize="26sp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:gravity="center"/>


    </com.google.android.material.appbar.MaterialToolbar>
    <!--        top nav bar shadow (jugad)-->
    <ImageView
        android:id="@+id/shadowImage"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:src="@drawable/shadow_backgorund"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/topnavbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/AssignmentCardFaculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"

        android:layout_margin="10dp"
       
        app:layout_constraintTop_toBottomOf="@+id/FacultyAssignmentDetailNavbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:foreground="@drawable/classroom_bg2"
                android:padding="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/Faculty_Assign_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CS-44"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="26sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/Faculty_Assign_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compiler Design"
                android:textStyle="bold"

                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="@color/beige"
                app:layout_constraintTop_toBottomOf="@+id/Faculty_Assign_class"
                />
            <TextView
                android:id="@+id/Faculty_AssignDetail_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ms.Upasana Dugal"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="19sp"
                android:paddingBottom="8dp"
                android:textColor="@color/beige"
                app:layout_constraintTop_toBottomOf="@+id/Faculty_Assign_subject" />





        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/shadow2Image"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:src="@drawable/shadow_backgorund"
        android:scaleType="fitXY"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/AssignmentCardFaculty"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CardAssignmentUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        app:layout_constraintTop_toBottomOf="@+id/shadow2Image">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/CardAssignmentUpload_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upasana Dugal"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"


                android:textStyle="bold"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/CardAssignmentUpload_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uploaded On-2 December,2024"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/CardAssignmentUpload_Name"
                android:textSize="16sp"
                android:textColor="@color/lightblack"/>
            <TextView
                android:id="@+id/CardAssignmentUpload_DeadLineDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit By- 14 December,2024"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/CardAssignmentUpload_Date"
                android:textSize="16sp"
                android:textColor="@color/lightblack"/>


            <TextView
                android:id="@+id/Faculty_pdf_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/CardAssignmentUpload_DeadLineDate"
                android:text="pdf-compiler Assignment"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"

                android:background="@drawable/ic_input_bg"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    
    <EditText
        android:id="@+id/faculty_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/faculty_clip_logo"
        android:hint="Message"
        android:background="@drawable/ic_input_bg">
        
    </EditText>
    
    <ImageView
        android:id="@+id/faculty_clip_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/papercliplogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="13dp"
        android:clickable="true"/>
        


</androidx.constraintlayout.widget.ConstraintLayout>